        {
            "name": "Restart Session (CoT)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"state\": \"restart_session\",\n  \"payload\": {\n    \"keepTopic\": true\n  }\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/chat/cot",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "chat",
                        "cot"
                    ]
                },
                "description": "Restart session while keeping the same topic"
            }
