{
    "info": {
        "name": "WebXR Konseling AI - Chain of Thought",
        "description": "Collection untuk testing Chain of Thought implementation",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "CoT Endpoints",
            "item": [
                {
                    "name": "1. Greeting (CoT)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"sessionId\": null,\n  \"state\": \"greeting\",\n  \"payload\": {}\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/chat/cot",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "chat",
                                "cot"
                            ]
                        },
                        "description": "Start new session with Chain of Thought reasoning. Notice the more empathetic and natural greeting."
                    }
                },
                {
                    "name": "2. Select Topic - Diri (CoT)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"sessionId\": \"{{sessionId}}\",\n  \"state\": \"identify_topic\",\n  \"payload\": {\n    \"topicId\": \"diri\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/chat/cot",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "chat",
                                "cot"
